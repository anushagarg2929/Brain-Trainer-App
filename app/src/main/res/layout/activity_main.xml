<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:backgroundTint="#ffffff"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/realtiveLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/pointtextView"
            android:layout_width="127dp"
            android:layout_height="52dp"
            android:layout_marginStart="156dp"
            android:layout_marginTop="38dp"
            android:layout_toEndOf="@+id/timertextView"
            android:background="#FF5722"
            android:paddingLeft="15dp"
            android:text="0/0"
            android:textSize="40dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/timertextView"
            android:layout_width="96dp"
            android:layout_height="56dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="38dp"
            android:background="#CA4874"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="0dp"
            android:text=" 30s"
            android:textSize="40sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sumtextview"
            android:layout_width="197dp"
            android:layout_height="64dp"
            android:layout_below="@+id/timertextView"
            android:layout_marginStart="97dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="117dp"
            android:paddingLeft="20dp"
            android:text="31 + 12"
            android:textColor="#050303"
            android:textSize="50dp"
            app:layout_constraintEnd_toEndOf="@id/timertextView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/timertextView"
            app:layout_constraintTop_toBottomOf="@id/timertextView" />

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="wrap_content"
            android:layout_height="71dp"
            android:layout_below="@id/sumtextview"
            android:layout_marginStart="40dp"
            android:layout_marginTop="350dp"
            android:paddingLeft="40sp"
            android:textSize="48sp"
            app:layout_constraintStart_toStartOf="@id/gridLayout"
            app:layout_constraintTop_toBottomOf="@id/gridLayout" />

        <Button
            android:id="@+id/playAgainButton"
            android:layout_width="130dp"
            android:layout_height="47dp"
            android:layout_below="@+id/resultTextView"
            android:layout_marginStart="144dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FFEB3B"
            android:onClick="playAgain"
            android:text="Play Again"
            android:textColor="#000000"
            android:visibility="invisible" />

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="200dp"
            app:layout_constraintStart_toStartOf="@id/sumtextview"
            app:layout_constraintTop_toBottomOf="@+id/sumtextview">

            <Button
                android:id="@+id/button0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#9E8C14"
                android:onClick="chooseAnswer"
                android:tag="0"
                android:text="3"
                android:textSize="100sp"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_row="0"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#13364E"
                android:onClick="chooseAnswer"
                android:tag="1"
                android:text="3"
                android:textSize="100sp"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_row="0"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#872F97"
                android:onClick="chooseAnswer"
                android:tag="2"
                android:text="3"
                android:textSize="100sp"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_row="1"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#1EC6C1"
                android:onClick="chooseAnswer"
                android:tag="3"
                android:text="3"
                android:textSize="100sp"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_row="1"
                app:layout_rowWeight="1" />


        </androidx.gridlayout.widget.GridLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/gameRealtiveLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        tools:layout_editor_absoluteX="2243dp"
        tools:layout_editor_absoluteY="353dp">

        <Button
            android:id="@+id/startButton"
            android:layout_width="307dp"
            android:layout_height="244dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="268dp"
            android:backgroundTint="#00453F"
            android:onClick="start"
            android:text="Go!"
            android:textColor="#000000"
            android:textSize="100dp"
            android:visibility="visible" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>